set makeprg=cargo

" -----------------------------------------------------------------------------
"     - Rust.vim settings (:help rust) -
" -----------------------------------------------------------------------------

let g:rustfmt_autosave = 1
let g:rustfmt_emit_files = 1
let g:rustfmt_fail_silently = 0

" -----------------------------------------------------------------------------
"     - Key mappings -
" -----------------------------------------------------------------------------
nmap <Leader>f :RustFmt<CR>
nmap <Leader>b :make! check<CR>
nmap <Leader>x :Crun<CR>
nmap <Leader>B :Ctest<CR>

" -----------------------------------------------------------------------------
"     - vim rooter settings (:help rooter) -
" -----------------------------------------------------------------------------

let g:rooter_patterns = ['*.toml']
